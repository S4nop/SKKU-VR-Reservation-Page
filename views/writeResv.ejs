                <label>인원(본인 포함)
            <select name="num" id="num">
              <option value="1">1명</option>
              <option value="2">2명</option>
              <option value="3">3명</option>
              <option value="4">4명</option>
             </select>
          </label>

                <label>날짜 선택
            <input type="text" id="date" data-role="date" style="position:relative; z-index:1;" readonly="readonly">
          </label>

