                    <label for="time5">01:00 ~ 01:30</label>
                    <input type="checkbox" class="chkTime" name="ctime" id="time6" value="0130" />
                    <label for="time6">01:30 ~ 02:00</label>
                    <input type="checkbox" class="chkTime" name="ctime" id="time7" value="0200" />
                    <label for="time7">02:00 ~ 02:30</label>
                    <input type="checkbox" class="chkTime" name="ctime" id="time8" value="0230" />
                    <label for="time8">02:30 ~ 03:00</label>
                    <input type="checkbox" class="chkTime" name="ctime" id="time9" value="0300" />
